{
  "default": true,
  "MD013": {
    "line_length": 100,
    "code_blocks": false,
    "tables": false
  },
  "MD033": {
    "allowed_elements": ["br", "sub", "sup", "kbd", "details", "summary"]
  },
  "MD041": false,
  "MD024": {
    "siblings_only": true
  },
  "MD026": {
    "punctuation": ".,;:!"
  },
  "MD029": {
    "style": "ordered"
  },
  "MD046": {
    "style": "fenced"
  },
  "MD048": {
    "style": "backtick"
  },
  "ignores": ["node_modules/**", "dist/**", ".git/**", ".kiro/**"]
}
