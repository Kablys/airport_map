{
  "name": "ryanair-europe-airports-map",
  "version": "2.0.0",
  "description": "Interactive map of European airports served by Ryanair",
  "type": "module",
  "main": "server.ts",
  "homepage": "https://username.github.io/airport_map",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/airport_map.git"
  },
  "scripts": {
    "dev": "bun --watch --hot *.html",
    "build": "bun build --minify index.html --outdir ./dist",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:e2e": "bun test tests/e2e/",
    "ci": "concurrently 'bun run audit' 'bun run lint:fix' 'bun run type-check' 'bun run test' 'bun run build'",
    "lint": "biome check .",
    "format": "biome format --write .",
    "lint:fix": "biome check --write .",
    "audit": "bun audit",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "@types/bun": "latest",
    "@types/leaflet": "^1.9.20"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/node": "^20.0.0",
    "@types/service_worker_api": "^0.0.9",
    "globals": "^16.3.0",
    "puppeteer": "^23.9.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "bun": {
    "target": "bun"
  }
}
